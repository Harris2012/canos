<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/layout_image_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/image_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_icon"
            android:layout_alignLeft="@+id/image_icon"
            android:layout_alignRight="@+id/image_icon"
            android:layout_alignTop="@+id/image_icon"
            android:src="@drawable/image_selection_checkbox"
            android:visibility="gone"
            android:contentDescription="@null" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


